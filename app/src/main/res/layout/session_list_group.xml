<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="@dimen/fivedp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    style="@style/Base.TextAppearance.AppCompat.Headline">
    <edu.byui.cs246.prettyripped.RippedTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingLeft="27dp"
        android:id="@+id/labelExerciseName"
        android:text="Exercise Name"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:focusable="false">
    </edu.byui.cs246.prettyripped.RippedTextView>
    <edu.byui.cs246.prettyripped.RippedImageView
        android:id="@+id/buttonDeleteExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/labelExerciseName"
        android:src="@drawable/ic_delete_white_24dp"
        android:focusable="false" />
    <edu.byui.cs246.prettyripped.RippedImageView
        android:id="@+id/buttonAddSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/buttonDeleteExercise"
        android:src="@drawable/ic_add_white_24dp"
        android:focusable="false" />

</RelativeLayout>